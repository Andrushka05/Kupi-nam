<%= form_for @shop do |f| %>
    <% if @shop.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@shop.errors.count, "error") %> Исправте ошибки:</h2>
          <ul>
            <% @shop.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :url %><br>
      <%= f.text_area :url %>
    </p>
    <p>
      <%= f.label :xpath %><br>
      <%= f.text_area :xpath %>
    </p>
    <p>
      <%= f.label :host %><br>
      <%= f.text_area :host %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>